name: nexus_fertility_app
description: A new Flutter project.
publish_to: 'none'
version: 1.0.0+1

environment:
  sdk: '>=3.0.0 <4.0.0'

dependencies:
  flutter:
    sdk: flutter
  provider: ^6.1.2
  shared_preferences: ^2.2.2
  intl: 0.20.2
  image_picker: ^1.0.7
  image_picker_web: ^3.1.1
  flutter_localizations:
    sdk: flutter
  firebase_core: ^2.24.2
  firebase_auth: ^4.16.0
  http: ^1.2.0

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^3.0.0

flutter:
  uses-material-design: true
  generate: true

dependency_overrides:
  web: ^0.5.1
# === YOUR THEME & BIOMETRICS DEPENDENCIES ===
dependencies:
  local_auth: ^2.1.5
  flutter_secure_storage: ^8.0.0
  shared_preferences: ^2.0.15

dev_dependencies:
  flutter_launcher_icons: ^0.10.0
  flutter_native_splash: ^2.2.16

flutter_icons:
  android: true
  ios: true
  image_path: "assets/icon/ferti_path.png"
  adaptive_icon_background: "#ffffff"
  adaptive_icon_foreground: "assets/icon/ferti_foreground.png"

flutter_native_splash:
  color: "#000000"
  image: "assets/splash/ferti_splash.png"
  android: true
  ios: true
  android_gravity: center
  ios_content_mode: center
  fullscreen: true
